.tasks-layout
  &__title
    font-size 16px
    line-height: 1.2

  &__top-panel
    display flex
    padding 14px 16px
    align-items center

  &__btn-back
    margin-right 24px
    opacity 0.6
    transition all 0.3s
    cursor pointer
    font inherit
    font-weight 400
    font-size 14px
    line-height 1.4
    position relative

    &:before
      content '\2190'
      margin-right 8px

    &:hover
      opacity 1
